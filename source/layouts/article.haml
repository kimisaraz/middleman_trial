- wrap_layout :layout do
  %article{itemscope: '', itemtype: "http://schema.org/BlogPosting"}
    - if is_blog_article?
      %header.article-header
        %h1{itemprop: "name headline"}
          = current_article.title
        .meta
          %time{datetime: "#{current_article.date.xmlschema}", itemprop: "datePublished"}
            = current_article.date.strftime('%B %d, %Y')
          %span.delimiter
            &bull;
          %span.tags{itemprop: "keywords"}
            = current_article.tags.map {|tag| link_to tag, tag_path(tag), rel: "tag" }.join(", ")
    .article_body{itemprop: "articleBody"}
      = yield
    - if is_blog_article?
      %nav
        %ul.pager
          - previous_article = current_article.previous_article
          - if previous_article
            %li.previous
              = link_to "&larr; #{previous_article.title}", previous_article, rel: "prev"
          - next_article = current_article.next_article
          - if next_article
            %li.next
              = link_to "#{next_article.title} &rarr;", next_article, rel: "next"
